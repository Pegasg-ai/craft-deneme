{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VoxelGame",
  "version": "0.1.2",
  "identifier": "com.example.voxelgame",
  "build": {
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Voxel Game",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://localhost:* wss://0.peerjs.com https://0.peerjs.com; img-src 'self' blob: data:; media-src 'self' blob: data:; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; object-src 'none'; frame-src 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": ["icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/Pegasg-ai/craft-deneme/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU3Mzk3QjI4MjUxMDhEMkMKUldRc2pSQWxLSHM1VnpHbEx6aHNwRUVXZS9MV0RCRTdOVDhxWTV1M1MvVlZDdURoa3Rscjk0amMK"
    }
  }
}
